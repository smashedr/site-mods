{
  "name": "Site Tools",
  "description": "Site Tools and Mods.",
  "homepage_url": "https://github.com/smashedr/site-tools",
  "author": "Shane",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "scripting",
    "storage"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["https://www.flaticon.com/*"],
      "js": ["js/content/flaticon.js"],
      "run_at": "document_start"
    }
  ],
  "background": { "type": "module" },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Show Main Popup Action"
    },
    "openHome": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Open Home Page"
    },
    "showPanel": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      },
      "description": "Show Extension Panel"
    }
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Site Tools",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "96": "images/logo96.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "96": "images/logo96.png",
    "128": "images/logo128.png"
  }
}
